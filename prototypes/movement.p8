cls()
player=
{
x=56, y=56, flipx=false
}
function _init()
	map(0,0)
	spr(5,player.x,player.y,2,2,player.flipx)
	end

function _update()
 -- movement controls 
	if (btn(0)) then
		player.flipx=false 
		player.x=player.x-1 end
 if (btn(1)) then
 	player.flipx=true 
 	player.x=player.x+1 end
 if (btn(2)) then 	
 	player.y=player.y-1 end
 if (btn(3)) then 
 	player.y=player.y+1 end
	end

function _draw()
 cls()
	spr(5,player.x,player.y,2,2,player.flipx)
	end

